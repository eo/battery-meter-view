<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="batteryMeterStyle" format="reference" />

    <declare-styleable name="BatteryMeterView">
        <attr name="batteryMeterChargeLevel" format="integer" />
        <attr name="batteryMeterCriticalChargeLevel" format="integer" />
        <attr name="batteryMeterIsCharging" format="boolean" />

        <!-- Appearance -->
        <attr name="batteryMeterColor" format="color" />
        <attr name="batteryMeterIndicatorColor" format="color" />
        <attr name="batteryMeterChargingColor" format="color" />
        <attr name="batteryMeterCriticalColor" format="color" />
        <attr name="batteryMeterUnknownColor" format="color" />
        <attr name="batteryMeterBackgroundColor" format="color" />

        <attr name="batteryMeterTheme" format="enum">
            <enum name="rounded" value="0" />
            <enum name="sharp" value="1" />
        </attr>
    </declare-styleable>
</resources>